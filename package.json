    "@digitalbazaar/security-document-loader": "^3.0.0",
    "c8": "^10.1.2",
    "chai": "^4.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-digitalbazaar": "^5.2.0",
